<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flighttest" parallel="tests" thread-count="4">
    <test name="passengers-count-1">
        <parameter name="noofpassengers" value="1"/>
        <parameter name="expectedprice" value="$89 USD"/>
        <classes>
            <class name="tests.FlightReservationtest.FlightReservationTest"/>
        </classes>
    </test>

    <test name="passengers-count-2">
        <parameter name="noofpassengers" value="2"/>
        <parameter name="expectedprice" value="$89 USD"/>
        <classes>
            <class name="tests.FlightReservationtest.FlightReservationTest"/>
        </classes>
    </test>

    <test name="passengers-count-3">
        <parameter name="noofpassengers" value="3"/>
        <parameter name="expectedprice" value="$89 USD"/>
        <classes>
            <class name="tests.FlightReservationtest.FlightReservationTest"/>
        </classes>
    </test>

    <test name="passengers-count-4">
        <parameter name="noofpassengers" value="4"/>
        <parameter name="expectedprice" value="$89 USD"/>
        <classes>
            <class name="tests.FlightReservationtest.FlightReservationTest"/>
        </classes>
    </test>
</suite>